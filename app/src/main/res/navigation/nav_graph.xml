<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.minecraft.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/dialogInstallFragment"
            app:destination="@id/dialogInstallFragment" />
        <action
            android:id="@+id/detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.minecraft.ui.util.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.minecraft.ui.main.DetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/blankFragment"
            app:destination="@id/blankFragment" />
        <argument
            android:name="model"
            app:argType="com.example.minecraft.data.model.AddonModel" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/dialogInstallFragment"
        android:name="com.example.minecraft.ui.util.DialogInstallFragment"
        android:label="fragment_dialog_install"
        tools:layout="@layout/fragment_dialog_install" >
        <action
            android:id="@+id/blankFragment"
            app:destination="@id/blankFragment" />
    </dialog>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.minecraft.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/settingsDetailFragment"
            app:destination="@id/settingsDetailFragment" />
        <action
            android:id="@+id/blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <action
        android:id="@+id/global_settingsFragment"
        app:destination="@id/settingsFragment"/>
    <fragment
        android:id="@+id/settingsDetailFragment"
        android:name="com.example.minecraft.ui.settings.SettingsDetailFragment"
        android:label="{title}" >
        <argument
            android:name="text"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>