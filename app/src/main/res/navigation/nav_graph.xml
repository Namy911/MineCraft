<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.minecraft.ui.main.MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/trialFragment"
            app:destination="@id/trialFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.minecraft.ui.util.BlankFragment"
        tools:layout="@layout/fragment_blank" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.minecraft.ui.main.DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/blankFragment"
            app:destination="@id/blankFragment" />
        <argument
            android:name="model"
            app:argType="com.example.minecraft.data.model.AddonModel" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/trialFragment"
            app:destination="@id/trialFragment"
            app:popUpTo="@id/detailFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.minecraft.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/settingsDetailFragment"
            app:destination="@id/settingsDetailFragment" />
        <action
            android:id="@+id/blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <action
        android:id="@+id/global_settingsFragment"
        app:destination="@id/settingsFragment"/>
    <fragment
        android:id="@+id/settingsDetailFragment"
        android:name="com.example.minecraft.ui.settings.SettingsDetailFragment">
        <argument
            android:name="text"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/trialFragment"
        android:name="com.example.minecraft.ui.trial.BillingFragment"
        android:label="fragment_trial"
        tools:layout="@layout/fragment_trial" >
        <action
            android:id="@+id/back_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/back_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>